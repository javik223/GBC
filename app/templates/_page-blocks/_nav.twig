<div class="grid-container main-nav">
  <div class="main-nav__logo">
    <a href="/" title="Lagos Fashion Week Home"
      ><img src="/assets/img/lfw-logo.png" alt="Lagos Fashion Week Logo"
    /></a>
  </div>

  <!-- Main Navigation -->
  <nav class="main-nav__nav hide-for-small-only">
    {% set mainNav = craft.navigation.nodes('main').all() %}
    <ul>
      {% nav node in mainNav %}
      <li>
        {{ node.link }}
      </li>
      {% endnav %}
    </ul>
  </nav>

  <div class="hamburger">
    <svg
      class="hamburger__icon"
      viewBox="0 0 100 100"
      width="100"
      onclick="this.classList.toggle('active')"
    >
      <path
        class="line top"
        d="m 70,33 h -40 c 0,0 -6,1.368796 -6,8.5 0,7.131204 6,8.5013 6,8.5013 l 20,-0.0013"
      ></path>
      <path class="line middle" d="m 70,50 h -25"></path>
      <path
        class="line bottom"
        d="m 69.575405,67.073826 h -40 c -5.592752,0 -6.873604,-9.348582 1.371031,-9.348582 8.244634,0 19.053564,21.797129 19.053564,12.274756 l 0,-40"
      ></path>
    </svg>
  </div>
</div>

<!-- Dropdown -->
