{% extends "_layout" %}

{% block content %}
{% import "_macros/profile-thumbnail" as thumbnail %}
<div class="grid-container section--large">
    <div class="section--large-padding">
      <h1 class="c-p beta text-center nmb">{{ entry.title }}</h1>
      <div class="grid-x align-center text-center section--small">
        <p class="cell medium-9 large-6 text-sans black h5">{{ entry.intro | striptags }}</p>
      </div>
    </div>
  </div>
  <div class="grid-container full">
		<div class="grid-x small-up-2 medium-up-3 large-up-4 grid-margin-x grid-margin-y">

    {% set teamMembers = craft.entries({
      section: 'team'
    }).all() %}

    {% for member in teamMembers %}
			<div class="cell" vocab="http://schema.org/" typeof="Person">
				<a href="{{ member.url() }}" property="url">
					<div class="team-member">
          {% set thumbnail = member.thumbnail.one() %}
          {% if thumbnail | length %}
						<div class="team-member_image">
              {{ thumbnail.generateThumbnail(thumbnail) }}
						</div>
          {% endif %}

						<div class="team-member__content">
							<p class="team-member_name" property="name">{{ member.title }}</p>
							<p class="team-member_designation text-sans" property="jobTitle">{{ member.position }}</p>
						</div>
					</div>
				</a>
			</div>
    {% endfor %}

		</div>
	</div>
  {% endblock %}